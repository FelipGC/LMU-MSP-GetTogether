<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".Activities.AppLogicActivity">

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="495dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="54dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/placeHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/noDevicesFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="@string/no_devices_found"
            android:textAlignment="center"
            android:textSize="36sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/presentersListViewTitle_established"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="@string/joined_presenters"
            android:textAlignment="textStart"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/presentersListView_joined"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </ListView>


        <TextView
            android:id="@+id/presentersListViewTitle_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="@string/available_presenters"
            android:textAlignment="textStart"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/presentersListView_available"
            android:layout_width="match_parent"
            android:layout_height="175dp">
        </ListView>


        <Button
            android:id="@+id/presentersListViewTitle_pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="See pending connection(s)"
            android:textAlignment="center"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>