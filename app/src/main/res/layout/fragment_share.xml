<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".Activities.AppLogicActivity">

    <ImageButton
        android:id="@+id/buttonFileSelector"
        android:layout_width="247dp"
        android:layout_height="247dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="97dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_select_file"
        android:contentDescription="@string/spectator"
        android:elevation="10dp"
        android:onClick="selectFileButtonClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/file_icon"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="349dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="160dp"
        android:layout_marginEnd="92dp"
        android:layout_marginStart="92dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Verteile Bilder"
        android:textAlignment="center"
        android:textSize="43sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>