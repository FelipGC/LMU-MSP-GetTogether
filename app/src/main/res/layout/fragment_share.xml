<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".Activities.AppLogicActivity">

    <ImageButton
        android:id="@+id/buttonFileSelector"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="97dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_select_file"
        android:contentDescription="@string/spectator"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/file_icon"
        android:onClick="selectFileButtonClicked"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="160dp"
        android:layout_marginEnd="92dp"
        android:layout_marginStart="92dp"
        android:text="Select a file"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>